@page "/edit-profile"
@model IndexModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<div class="container">
  <h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
             <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Occupation"></label>
                <input asp-for="Input.Occupation" class="form-control" />
                <span asp-validation-for="Input.Occupation" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Organisation"></label>
                <input asp-for="Input.Organisation" class="form-control" />
                <span asp-validation-for="Input.Organisation" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea> 
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Facebook"></label>
                <input asp-for="Input.Facebook" class="form-control" />
                <span asp-validation-for="Input.Facebook" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Twitter"></label>
                <input asp-for="Input.Twitter" class="form-control" />
                <span asp-validation-for="Input.Twitter" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.Instagram"></label>
                <input asp-for="Input.Instagram" class="form-control" />
                <span asp-validation-for="Input.Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Input.uploadImage" class="control-label"></label>:
                <input asp-for="Input.uploadImage" accept="image/*" required />
                <span asp-validation-for="Input.uploadImage" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}